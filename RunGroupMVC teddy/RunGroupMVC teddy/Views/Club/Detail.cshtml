@model Club

<!-- Page Content -->
<div class="container my-5">

 <!-- Club Title and Description -->
 <h1 class="display-4 mb-4">
  @Model.Title
  <small class="text-muted">@Model.ClubCategory</small>
 </h1>

 <!-- Club Details Row -->
 <div class="row mb-4">

  <!-- Club Image -->
  <div class="col-md-8">
   <img class="img-fluid rounded shadow-sm" src="@Model.Image" width="100%" height="auto" alt="Image of @Model.Title">
  </div>

  <!-- Club Information -->
  <div class="col-md-4">
   <h3 class="h5 my-3">About the Club</h3>
   <p>@Model.Description</p>
   <h3 class="h5 my-3">Location</h3>
   <ul class="list-unstyled">
    <li><strong>City:</strong> @Model.Address.City</li>
    <li><strong>State:</strong> @Model.Address.State</li>
   </ul>
  </div>

 </div>
