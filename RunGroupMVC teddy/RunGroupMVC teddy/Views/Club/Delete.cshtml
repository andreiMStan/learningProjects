@using RunGroupMVC_teddy.Data.Enum;
@using RunGroupMVC_teddy.ViewModels;
@model Club

<div class="container my-5">
 <h1 class="text-danger mb-4">Are you sure you want to delete this club?</h1>

 <div class="alert alert-warning" role="alert">
  This action cannot be undone. Please confirm if you want to permanently delete the following club details.
 </div>

 <form method="post" asp-action="Delete" enctype="multipart/form-data">
  <input type="hidden" asp-for="Id" />

  <div class="form-group mb-3">
   <label asp-for="Title" class="form-label">Title</label>
   <input asp-for="Title" class="form-control" readonly />
  </div>

  <div class="form-group mb-3">
   <label asp-for="Description" class="form-label">Description</label>
   <textarea asp-for="Description" class="form-control" rows="3" readonly></textarea>
  </div>

  <div class="form-group mb-3">
   <label asp-for="ClubCategory" class="form-label">Club Category</label>
   <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control" disabled>
    <option>--Select--</option>
   </select>
  </div>

  <div class="form-group mb-3">
   <label asp-for="Address.Street" class="form-label">Street</label>
   <input asp-for="Address.Street" class="form-control" readonly />
  </div>

  <div class="form-group mb-3">
   <label asp-for="Address.City" class="form-label">City</label>
   <input asp-for="Address.City" class="form-control" readonly />
  </div>

  <div class="form-group mb-3">
   <label asp-for="Address.State" class="form-label">State</label>
   <input asp-for="Address.State" class="form-control" readonly />
  </div>

  <div class="form-group mb-3">
   <label asp-for="Image" class="form-label">Club Image</label>
   <div>
    <img src="@Model.Image" alt="Club Image" class="img-fluid rounded mb-2" width="200" height="100" />
   </div>
   <input asp-for="Image" type="file" class="form-control" readonly disabled />
  </div>

  <div class="d-flex justify-content-end">
   <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
   <button type="submit" class="btn btn-danger">Confirm Delete</button>
  </div>
 </form>
</div>
