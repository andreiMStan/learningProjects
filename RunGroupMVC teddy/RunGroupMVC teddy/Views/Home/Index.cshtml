@using RunGroupMVC_teddy.ViewModels;
@model HomeViewModel
@{
 ViewData["Title"] = "Home Page";
}

<section class="jumbotron text-center bg-primary text-white">
 <div class="container">
  <h1 class="display-4">Welcome to RunGroups</h1>
  <p class="lead">Find and join the best running clubs near you.</p>
  <p>
   <a href="#" class="btn btn-lg btn-light me-2">Join a Club</a>
   <a href="#" class="btn btn-lg btn-outline-light">Learn More</a>
  </p>
 </div>
</section>

<div class="album py-5 bg-light">
 <div class="container">
  <h2 class="fw-light text-center mb-5">Running Clubs Near @Model.City, @Model.State</h2>

  @if (Model.Clubs == null || !Model.Clubs.Any())
  {
   <div class="text-center">
    <h4 class="fw-light">No running clubs found in your area. <a asp-area="" asp-controller="Account" asp-action="Login">Log in</a> and create one!</h4>
   </div>
  }
  else
  {
   <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach (var item in Model.Clubs)
    {
     <div class="col">
      <div class="card h-100 shadow-sm">
       <img src="@item.Image" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="@item.Title">
       <div class="card-body">
        <h5 class="card-title">@item.Title</h5>
        <p class="card-text">@item.Description</p>
        <div class="d-flex justify-content-between align-items-center">
         <a asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">View Details</a>
         <small class="text-muted">Updated recently</small>
        </div>
       </div>
      </div>
     </div>
    }
   </div>
  }
 </div>
</div>
