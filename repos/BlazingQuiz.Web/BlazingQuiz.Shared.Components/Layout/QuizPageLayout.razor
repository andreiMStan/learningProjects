@using Microsoft.AspNetCore.Components.Sections
@inherits LayoutComponentBase

@inject IPlatform Platform
<div class="@(Platform.IsWeb? "container":"")">
        <div class="page">
    <main>
        <article class="content px-4">
         

                    @if (Platform.IsMobileApp)
                    {
                         <div class="px-4-negative" style="margin-top:-1.1rem;
                               
                                margin-bottom:15px;
                                height:60px;">

                    
                    <h4 class="m-0 p-3  text-white" style="background-color
                     :var(--app-color)">
                     <SectionOutlet SectionName="pageTitle"/>
                    </h4>
                    </div>

                       }

                     else
                    {
                        <div>

                        <h1 class="m-0 h3 fw-bold">
                            <SectionOutlet SectionName="pageTitle" />
                        </h1>
                        </div>
                       <hr />

                    }
                @Body
        </article>
    </main>
</div>
</div>
